{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://cyclonedx.org/schema/bom-1.6.schema.json",
  "title": "CycloneDX 1.6 Software Bill of Materials (SBOM)",
  "description": "Schema for a CycloneDX 1.6 Software Bill of Materials.",
  "type": "object",
  "properties": {
    "bomFormat": {
      "type": "string",
      "const": "CycloneDX"
    },
    "specVersion": {
      "type": "string",
      "const": "1.6"
    },
    "serialNumber": {
      "type": "string",
      "format": "uri",
      "pattern": "^urn:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "version": {
      "type": "integer",
      "default": 1
    },
    "metadata": {
      "$ref": "#/$defs/metadata"
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/component"
      }
    },
    "services": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/service"
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/dependency"
      }
    },
    "compositions": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/composition"
      }
    },
    "vulnerabilities": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/vulnerability"
      }
    }
  },
  "required": [
    "bomFormat",
    "specVersion",
    "version"
  ],
  "$defs": {
    "metadata": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "tools": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/tool"
          }
        },
        "authors": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/author"
          }
        },
        "component": {
          "$ref": "#/$defs/component"
        }
      }
    },
    "component": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "application",
            "framework",
            "library",
            "container",
            "operating-system",
            "device",
            "firmware",
            "file"
          ]
        },
        "bom-ref": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "scope": {
          "type": "string",
          "enum": [
            "required",
            "optional",
            "excluded"
          ]
        },
        "hashes": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/hash"
          }
        },
        "licenses": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/licenseChoice"
          }
        },
        "copyright": {
          "type": "string"
        },
        "cpe": {
          "type": "string"
        },
        "purl": {
          "type": "string"
        },
        "files": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/file"
          }
        }
      },
      "required": [
        "type",
        "name"
      ]
    },
    "service": {
      "type": "object",
      "properties": {
        "bom-ref": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "file": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "hashes": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/hash"
          }
        }
      },
      "required": [
        "name"
      ]
    },
    "dependency": {
      "type": "object",
      "properties": {
        "ref": {
          "type": "string"
        },
        "dependsOn": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "ref"
      ]
    },
    "composition": {
      "type": "object",
      "properties": {
        "aggregate": {
          "type": "string"
        },
        "assemblies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "aggregate"
      ]
    },
    "vulnerability": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "source": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          }
        },
        "ratings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "score": {
                "type": "number"
              },
              "severity": {
                "type": "string"
              }
            }
          }
        },
        "cwes": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "description": {
          "type": "string"
        },
        "published": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "affects": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "ref": {
                "type": "string"
              }
            },
            "required": [
              "ref"
            ]
          }
        }
      },
      "required": [
        "id"
      ]
    },
    "tool": {
      "type": "object",
      "properties": {
        "vendor": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "hash": {
      "type": "object",
      "properties": {
        "alg": {
          "type": "string",
          "enum": [
            "MD5",
            "SHA-1",
            "SHA-256",
            "SHA-512"
          ]
        },
        "content": {
          "type": "string"
        }
      },
      "required": [
        "alg",
        "content"
      ]
    },
    "licenseChoice": {
      "type": "object",
      "properties": {
        "license": {
          "$ref": "#/$defs/license"
        },
        "expression": {
          "type": "string"
        }
      }
    },
    "license": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}
